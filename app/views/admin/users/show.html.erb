<div class="row mb-5">
  <div class="col-lg-12">
    <h1 class="header-option adm-header">会員詳細</h1>
  </div>

  <div class="option-right my-3">
    <%= link_to "退会させる", admin_user_path(@user.id), method: :delete, "data-confirm" => "本当によろしいですか？", class: "btn danger-btn" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-2"></div>

  <div class="col-lg-2 text-center mb-5">
    <%= image_tag @user.get_profile_image(150, 150), class: "adm-icon-border" %>
  </div>

  <div class="col-lg-6">
    <table class="table">
      <tbody>
        <tr>
          <th class="border-bottom border-white">会員ID</th>
          <td>
            <%= @user.id %>
          </td>
        </tr>

        <tr>
          <th class="border-bottom border-white">登録日時</th>
          <td>
            <%= l @user.created_at %>
          </td>
        </tr>

        <tr>
          <th class="border-bottom border-white">会員登録名</th>
          <td>
            <%= @user.name %>
          </td>
        </tr>

        <tr>
          <th class="border-bottom border-white">メールアドレス</th>
          <td>
            <%= @user.email %>
          </td>
        </tr>

        <tr>
          <th>プロフィール</th>
          <td>
            <%= @user.profile %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-lg-2"></div>
</div>

<div class="row my-5">
  <div class="col-lg-11 mx-auto">
    <h3 class="header-option adm-header">
      <%= @user.name %>さんの投稿一覧
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-lg-9 mx-auto mb-5">
    <table class="table text-center">
      <thead>
        <tr>
          <th style="width: 10%">投稿ID</th>
          <th style="width: 20%">投稿日時</th>
          <th style="width: 50%">タイトル</th>
        </tr>
      </thead>

      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td>
            <%= post.id %>
          </td>
          <td>
            <%= l post.created_at %>
          </td>
          <td>
            <%= link_to post.title, admin_post_path(post.id), class: "link-option" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>