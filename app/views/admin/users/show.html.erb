<div class="container">
  <div class="row">
    <div class="col">
      <h1>ユーザー詳細</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <%= link_to "退会させる", admin_user_path(@user.id), method: :delete, "data-confirm" => "本当によろしいですか？" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーアイコン</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100, 100) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <th>ユーザID</th>
            <td>
              <% @user.id %>
            </td>
          </tr>
          
          <tr>
            <th>登録日時</th>
            <td>
              <%= l @user.created_at %>
            </td>
          </tr>
          
          <tr>
            <th>ユーザーネーム</th>
            <td>
              <%= @user.name %>
            </td>
          </tr>
          
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= @user.email %>
            </td>
          </tr>
          
          <tr>
            <th>プロフィール</th>
            <td>
              <%= @user.profile %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h3><%= @user.name %>さんの投稿一覧</h3>
    </div>
  </div>
</div>