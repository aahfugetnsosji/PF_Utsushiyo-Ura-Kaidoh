<div class="container">
  <div class="row">
    <div class="col">
      <h1>ユーザー一覧</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>登録日時</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= l user.created_at %>
            </td>
            <td>
              <%= link_to user.name, admin_user_path(user.id) %>
            </td>
            <td>
              <%= user.email %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>