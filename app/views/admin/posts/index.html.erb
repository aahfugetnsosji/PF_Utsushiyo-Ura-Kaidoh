<div class="container">
  <div class="row">
    <div class="col">
      <h1>投稿一覧</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>投稿日時</th>
            <th>タイトル</th>
            <th>投稿者</th>
          </tr>
        </thead>
        
        <% @posts.each do |post| %>
        <tbody>
          <tr>
            <td>
              <%= post.id %>
            </td>
            <td>
              <%= l post.created_at %>
            </td>
            <td>
              <%= link_to post.title, admin_post_path(post.id) %>
            </td>
            <td>
              <%= post.user.name %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>