<div class="container">
  <div class="row">
    <div class="col">
      <h1>タグ編集</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <%= form_with model: @tag, url: admin_tag_path, method: :patch do |f| %>
        <tbody>
          <tr>
            <th></th>
            <td>
              <%= f.text_field :name, autofocus: true %>
            </td>
          </tr>
          
          <tr>
            <th></th>
            <td>
              <%= f.submit "変更を保存" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>