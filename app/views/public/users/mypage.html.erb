<div class="container">
  <div class="row mb-5">
    <div class="col">
      <h1>マイページ</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <%= image_tag @user.get_profile_image(100, 100) %>
    </div>
    <div class="col-lg-7">
      <h5>ユーザーネーム</h5>
      <h4>
        <%= @user.name %>
      </h4>

      <h5>メールアドレス</h5>
      <h4>
        <%= @user.email %>
      </h4>

      <h5>プロフィール</h5>
      <h4>
        <%= @user.profile %>
      </h4>

      <%= link_to mypage_edit_path, class: "btn", method: :get do %>
        <i class="fa-sharp fa-solid fa-gear"></i>
      <% end %>
    </div>
  </div>

  <div class="row header-option">
    <div class="col-lg-10">
      <h3>自分の投稿</h3>
    </div>
    <div class="col-lg-2">
      <%= link_to"ブックマーク一覧", mypage_favorites_path, class: "btn btn-option" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @posts.count == 0 %>
        <div>
          <p>
            投稿はありません。
          </p>
          <p>
            <%= link_to "ここ", new_post_path %><!--
         -->から投稿できます。
          </p>
        </div>
      <% else %>
        <div class="card-deck">
        <% @posts.each do |post| %>
          <a href="/posts/<%= post.id %>" class="card text-dark border-dark" style="width: 10%;">
            <%= image_tag post.get_image(200, 150), class: "card-img-top" %>
            <div class="card-body">
              <h6 class="card-title">
                <%= post.title %>
              </h6>
            </div>
          </a>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>