<div class="container">
  <div class="row mb-5">
    <div class="col">
      <h1>マイページ</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <%= image_tag @user.get_profile_image(100, 100) %>
    </div>
    <div class="col-lg-7">
      <h5>ユーザーネーム</h5>
      <h4>
        <%= @user.name %>
      </h4>

      <h5>メールアドレス</h5>
      <h4>
        <%= @user.email %>
      </h4>

      <h5>プロフィール</h5>
      <h4>
        <%= @user.profile %>
      </h4>
      
      <%= link_to "プロフィールを編集", mypage_edit_path %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-8">
      <h3><!--
     -->自分の投稿<!--
     --><span style="font-size: 10px; float: right;">ブックマーク一覧 >></span>
      </h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-8">
      <% if @posts.count == 0 %>
        <div>
          <p>
            投稿はありません。
          </p>
          <p>
            <%= link_to "ここ", new_post_path %><!--
         -->から投稿できます。
          </p>
        </div>
      <% else %>
        <% @posts.each do |post| %>
          <a href="/posts/<%= post.id %>" class="card lg-3 text-dark border-0">
            <%= image_tag post.get_image(200, 130), class: "card-img-top" %>
            <div class="card-body">
              <h6 class="card-title">
                <%= post.title %>
              </h6>
            </div>
          </a>
        <% end %>
      <% end %>
    </div>
  </div>
    
</div>