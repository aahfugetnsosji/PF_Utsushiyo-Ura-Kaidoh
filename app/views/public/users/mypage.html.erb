<div class="row mb-2">
  <div class="col-lg-12">
    <h1 class="header-option pub-header">マイページ</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-9 mx-auto my-5">
    <h2 class="header-option pub-header">登録情報</h2>
  </div>
</div>

<div class="row">
  <div class="col-lg-2"></div>

  <div class="col-lg-2 text-center mb-5">
    <%= image_tag @user.get_profile_image(150, 150), class: "icon-border" %>
  </div>

  <div class="col-lg-6">
    <h5 class="header-option pub-header">ユーザーネーム</h5>
    <h3 class="text-option pb-2">
      <%= @user.name %>
    </h3>

    <h5 class="header-option pub-header mt-5">メールアドレス</h5>
    <h3 class="text-option pb-2">
      <%= @user.email %>
    </h3>

    <h5 class="header-option pub-header mt-5">プロフィール</h5>
    <h3 class="text-option pb-2">
      <%= @user.profile %>
      <% unless @user.profile.nil? %>
        <span class="text-normal pt-3">
          プロフィールは未記入です。
        </span>
      <% end %>
    </h3>

    <div class="row my-5">
      <div class="text-center">
        <%= link_to "プロフィールを編集", mypage_edit_path, class: "btn btn-option" %>
      </div>
    </div>
  </div>

  <div class="col-lg-2"></div>
</div>

<div class="row">
  <div class="col-lg-12 mx-auto">
    <h3 class="header-option pub-header">自分の投稿</h3>
  </div>
</div>
<div class="option-right my-3">
  <%= link_to"ブックマーク一覧", mypage_favorites_path, class: "btn btn-option" %>
</div>

<div class="row">
  <div class="col-lg-12">
    <% if @posts.count == 0 %>
      <div>
        <p>
          投稿はありません。
        </p>
        <p>
          <%= link_to "ここ", new_post_path %><!--
       -->から投稿できます。
        </p>
      </div>
    <% else %>
      <div class="row d-block">
        <div class="col-lg-12">
          <div class="card-group">
            <% @posts.each do |post| %>
              <div class="m-3">
                <a href="/posts/<%= post.id %>" class="card text-dark border-dark">
                  <%= image_tag post.get_image(150, 150), class: "card-img-top border-bottom border-dark" %>
                  <div class="card-body">
                    <h6 class="card-title col-3 text-truncate">
                      <%= post.title %>
                    </h6>
                  </div>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>