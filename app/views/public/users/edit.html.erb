<div class="container">
  <div class="row">
    <div class="col">
      <h1>プロフィール編集</h1>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <h5>アイコン画像</h5>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        
        <h5>ユーザーネーム</h5>
        <%= f.text_field :name %>
        
        <h5>メールアドレス</h5>
        <%= f.text_field :email %>
        
        <h5>プロフィール</h5>
        <%= f.text_area :profile %>
        
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <iv class="col">
      <%= link_to "退会する", unsubscribe_path %>
    </iv>
  </div>
</div>