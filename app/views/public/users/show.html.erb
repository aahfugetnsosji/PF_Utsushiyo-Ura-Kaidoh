<div class="container">
  <div class="row">
    <div class="col">
      <h1>
        <%= @user.name %>さんのプロフィール
      </h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <%= image_tag @user.get_profile_image(100, 100) %>
    </div>
    <div class="col">
      <h4>ユーザーネーム</h4>
      <%= @user.name %>
      
      <h4>プロフィール</h4>
      <%= @user.profile %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h2>
        <%= @user.name %>さんの投稿
      </h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <% if @posts.count == 0 %>
        <div>
          <p>
            投稿はありません。
          </p>
        </div>
      <% else %>
        <% @posts.each do |post| %>
          <a href="/posts/<%= post.id %>" class="card lg-3 text-dark border-0">
            <%= image_tag post.get_image(200, 130), class: "card-img-top" %>
            <div class="card-body">
              <h6 class="card-title">
                <%= post.title %>
              </h6>
            </div>
          </a>
        <% end %>
      <% end %>
    </div>
  </div>
</div>