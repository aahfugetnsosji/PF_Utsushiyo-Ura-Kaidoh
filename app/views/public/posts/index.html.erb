<div class="row">
  <div class="col-lg-12 mb-3">
    <h1 class="header-option pub-header">
      全国の投稿一覧
      <span class="header-annotation">
      全<%= @posts.count %>件
    </span>
    </h1>
  </div>
</div>

<div class="row mx-auto mt-3">
  <div class="col-lg-1"></div>
  <div class="col-lg-8">
    <% if @posts.count == 0 %>
      <div>
        <p>
          投稿はありません。
        </p>
      </div>
    <% else %>
      <div class="row">
      <% @posts.each do |post| %>
        <div class="col-lg-4">
          <table class="table">
            <tr>
              <th class="index-th">
                <a href="/posts/<%= post.id %>" class="bd-placeholder-img index-img-resize">
                  <%= image_tag post.get_image %>
                </a>
              </th>
              <td class="index-hd">
                <a href="/posts/<%= post.id %>" class="index-link-option">
                  <h6 class="pub-header">
                    <%= post.title %>
                  </h6>
                  <p class="index-body">
                    <%= safe_join(post.body.split("\n"),tag(:br)) %>
                  </p>
                </a>
                <p class="index-name">
                  <a href="/users/<%= post.user_id %>" class="index-name-link-option">
                    <%= post.user.name %>
                  </a>
                  <span class="index-date">
                    <%= l post.created_at, format: :short %>
                  </span>
                </p>
              </td>
            </tr>
          </table>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-lg-2">
    <!--キーワード検索窓-->
    <%= render partial: 'public/partials/search_keyword' %>
    <!--タグ検索窓-->
    <%= render partial: 'public/partials/search_tag', locals: { tag: @tags} %>
    <!--地方区分検索窓-->
    <%= render partial: 'public/partials/search_region', locals: { region: @regions} %>
    <!--都道府県検索窓-->
    <%= render partial: 'public/partials/search_prefecture', locals: { prefecture: @prefectures} %>
  </div>
</div>