<div class="container">
  <div class="row">
    <div class="col">
      <h1>投稿内容を編集</h1>
    </div>
  </div>

  <!--バリデーションエラーメッセージを表示-->

  <div class="row">
    <div class="col">
      <%= form_with model: @post, url: post_path, method: :patch do |f| %>
        <%= f.file_field :image, accept: "image/*" %>
         <h4>
          タイトル
          <span>※必須</span>
        </h4>
        <%= f.text_field :title, placeholder: "タイトル" %>

        <h4>
          本文
          <span>※必須</span>
        </h4>
        <%= f.text_area :body, placeholder: "本文を入力" %>
          
          <h4>タグを選択</h4>
          <%= f.fields_for :post_tags do |pt| %>
            <!--<span>5つまで選択可能　※重複不可</span><br>-->
            <%= pt.collection_select(:tag_id, @tags, :id, :name, {prompt: "--選択してください--"}) %>
          <% end %>
          
        <h4>
          地方区分を選択
          <span>※必須</span>
        </h4>
        <%= f.collection_select(:region_id, @regions, :id, :region_name, {prompt: "--選択してください--"}) %>
        
        <h4>都道府県を選択</h4>
        <%= f.fields_for :post_prefectures do |pp| %>
          <%= pp.collection_select(:prefecture_id, @prefectures, :id, :prefecture_name, {prompt: "--選択してください--"}) %>
        <% end %>
        
        <div>
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>