<!DOCTYPE html>
<html>
  <head>
    <title>うつしよ裏怪道</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!--複数のタグ選択ができるようselect2を導入-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css">
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="nav">
        <h1>LOGO</h1>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      
      <% if admin_signed_in? %><!-- 管理者ログイン後メニュー -->
        <li>
          <%= link_to "ユーザー一覧", admin_users_path %>
        </li>
        <li>
          <%= link_to "投稿一覧", admin_posts_path %>
        </li>
        <li>
          <%= link_to "通報一覧", root_path %><!-- URL変更 -->
        </li>
        <li>
          <%= link_to "タグ一覧", admin_tags_path %>
        </li>
        <li>
          <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% elsif user_signed_in? %><!-- ユーザログイン後メニュー -->
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "マイページ", mypage_path %>
        </li>
        <li>
          <%= link_to "投稿する", new_post_path %>
        </li>
        <li>
          <%= link_to "全国の投稿一覧", posts_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "無料会員登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, method: :post %><!-- URL変更 -->
        </li>
      <% end %>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>

    </footer>
    
    <!--FontAwesomeの読み込み-->
    <script src="https://kit.fontawesome.com/04b8ef8016.js" crossorigin="anonymous"></script>
    <!--複数のタグ選択ができるようselect2を導入-->
    <!-- jquery & iScroll -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Select2本体 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/js/select2.min.js"></script>
  </body>
</html>
