<!DOCTYPE html>
<html>
  <head>
    <title>うつしよ裏怪道</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--FontAwesomeの読み込み-->
    <script src="https://kit.fontawesome.com/04b8ef8016.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!--select2のjsファイル読み込み-->
    <%= javascript_pack_tag 'select2-min', 'data-turbolinks-track': 'reload' %>
    
    <!--Jmapの読み込み-->
    <%= javascript_pack_tag 'jquery-japan-map-min', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <nav class="nav">
        <h1>
          <%= link_to "LOGO", root_path %>
        </h1>
      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <% if admin_signed_in? %><!-- 管理者ログイン後メニュー -->
        <li>
          <%= link_to "ユーザー一覧", admin_users_path %>
        </li>
        <li>
          <%= link_to "投稿一覧", admin_posts_path %>
        </li>
        <li>
          <%= link_to "通報一覧", admin_reports_path %>
        </li>
        <li>
          <%= link_to "タグ一覧", admin_tags_path %>
        </li>
        <li>
          <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% elsif user_signed_in? %><!-- ユーザログイン後メニュー -->
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "マイページ", mypage_path %>
        </li>
        <li>
          <%= link_to "投稿する", new_post_path %>
        </li>
        <li>
          <%= link_to "全国の投稿一覧", posts_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% else %><!-- ログイン前メニュー -->
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "無料会員登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, method: :post %>
        </li>
      <% end %>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>

    </footer>

    <!--select2本体読み込み-->
    <script>
        $(document).ready(function() {
            $('.js-example-basic-multiple').select2();
        });
    </script>
    
    <!--Jmap本体読み込み-->
    <script>
        $(function(){
            $("#map-container").japanMap({
                onSelect : function(data){
                    alert(data.name);
                }
            });
        });
    </script>
  </body>
</html>
